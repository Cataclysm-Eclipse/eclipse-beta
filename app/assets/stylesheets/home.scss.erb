@import 'config/mixins';
@import 'config/variables';

.section-01 {
    width: 100%;
    height: 100%;
    background: url(<%= asset_path 'blue-background.jpg' %>) no-repeat; // mito-pattern-light-blue
    background-size: cover;

    .logo {
        position: relative;
        left: 50%;
        transform: translate(-50%,-50%);

        @include breakpoint(mobile-only) {
            top: 35%;
            height: 45%;
        }
        @include breakpoint(tablet-range) {
            top: 43.75%;
            height: 40%;
        }
        @include breakpoint(desktop-range) {
            top: 43.75%;
            height: 50%;
        }
        @include breakpoint(large-desktop-range) {
            top: 45.25%;
            height: 55%;
        }
    }
}

.text-banner {
    position: absolute;
    bottom: 2.5%;
    width: 100%;
    background-color: #FAFAFA;

    p {
        @include vertical-align;
        width: 95%;
        margin: auto;
        text-align: center;
        font-size: 1.2rem;
    }

    a {
        color: $blue;
        text-decoration: none;
    }

    @include breakpoint(mobile-only) {
        height: 30%;
        bottom: 0;
    }
    @include breakpoint(tablet-range) {
        height: 10%;
    }
    @include breakpoint(desktop-range) {
        height: 10%;
    }
    @include breakpoint(large-desktop-range) {
        height: 7.5%;
    }
}